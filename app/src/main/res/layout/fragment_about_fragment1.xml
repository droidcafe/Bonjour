<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/about_primary1"
    tools:context="droid.nir.testapp1.noveu.welcome.about.AboutFragment1">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/about_desp"
        android:id="@+id/about_desp"
        android:text="@string/app_desp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/about_title"
        android:id="@+id/about_title"
        android:layout_above="@id/about_desp"
        android:text="@string/app_name" />



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/koala"
        android:src="@drawable/koala250"
        android:layout_above="@id/about_title"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
