<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pmost_outer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="droid.nir.testapp1.Add_Pending">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/pmost_outer_inner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation = "vertical"
            android:padding="10dp">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/pending_cards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="10dp"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="2dp"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tttile"
                    android:layout_toRightOf="@id/etimeimage"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:layout_marginTop="10dp"
                    android:id="@+id/dtitle"
                    android:paddingLeft="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="0dp"
                    android:paddingBottom="0dp"/>


                <TextView
                    android:id="@+id/etitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@id/dtitle"
                    android:text=""
                    android:textColor="@color/primary_text"
                    android:textSize="20sp" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/description_cards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pending_cards"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="2dp"
                android:visibility="gone"
                android:layout_marginRight="2dp"
                android:layout_marginTop="10dp"
                card_view:cardCornerRadius="0dp"

                card_view:cardElevation="2dp"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/description"
                    android:layout_toRightOf="@id/etimeimage"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:layout_marginTop="10dp"
                    android:id="@+id/ddescription"
                    android:paddingLeft="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="0dp"
                    android:paddingBottom="0dp"/>


                <TextView
                    android:id="@+id/ddesp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                   android:layout_below="@id/ddescription"
                    android:text="Description comes here"
                    android:textColor="@color/primary_text"
                    android:textSize="18sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/procons_cards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/description_cards"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="10dp"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="2dp"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="10dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pheadtohead"
                        android:layout_toRightOf="@id/etimeimage"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:layout_marginTop="10dp"
                        android:id="@+id/dcomparison"
                        android:paddingLeft="0dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="0dp"
                        android:paddingBottom="0dp"/>
                    <TextView
                        android:id="@+id/dcomp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="0dp"
                        android:text="@string/pprobig"
                        android:textColor="@color/primary_text"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/dpros"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:paddingLeft="20dp"
                        android:paddingStart="20dp"
                        android:paddingBottom="0dp"
                        android:text="@string/pprosare"
                        android:textColor="@color/primary_text"
                        android:textSize="18sp"
                        android:layout_marginLeft="20dp"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:id="@+id/protextid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">


                    </LinearLayout>

                    <TextView
                        android:id="@+id/dcons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/dcomp"
                        android:visibility="gone"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="20dp"
                        android:paddingLeft="20dp"
                        android:paddingStart="20dp"
                        android:text="@string/pconsare"
                        android:textColor="@color/primary_text"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:id="@+id/contextid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">


                    </LinearLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/time_cards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/procons_cards"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="10dp"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="2dp"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pdeadline"
                        android:layout_toRightOf="@id/etimeimage"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:layout_marginTop="10dp"
                        android:id="@+id/ddeadline"
                        android:paddingLeft="0dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="0dp"
                        android:paddingBottom="0dp"/>

                    <TextView
                        android:id="@+id/dtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ddeadline"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="0dp"
                        android:text="@string/pdecideat"
                        android:textColor="@color/primary_text"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/dtimemin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/dtime"
                        android:layout_margin="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_toRightOf="@id/dtime"

                        android:text="10:30"
                        android:textColor="#F44336"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/dremainder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/dtime"
                        android:paddingLeft="20dp"
                        android:paddingStart="20dp"
                        android:text="@string/remtype"
                        android:textColor="@color/primary_text"
                        android:layout_marginLeft="0dp"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/dremaindertype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="false"
                        android:layout_toRightOf="@id/dremainder"
                        android:layout_below="@id/dtime"
                        android:layout_marginLeft="0dp"
                        android:paddingLeft="0dp"
                        android:text="Silent"
                        android:layout_alignLeft="@id/dtimemin"
                        android:textColor="#F44336"
                        android:textSize="17sp" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/extras_cards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/time_cards"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="10dp"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="2dp"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="10dp"
                android:visibility="gone">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="17sp"
                        android:text="@string/phone"
                        android:id="@+id/dphone"
                        android:paddingStart="0dp"
                        android:paddingLeft="0dp"
                        android:visibility="gone"
                        android:textColor="@color/accent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="17sp"
                        android:text="944608237489"
                        android:id="@+id/dphoneno"
                        android:paddingRight="70dp"
                        android:visibility="gone"
                        android:textColor="@color/primary_text"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="17sp"
                        android:text="@string/website"
                        android:id="@+id/dweb"
                        android:visibility="gone"
                        android:layout_below="@id/dphone"
                        android:textColor="@color/accent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="17sp"
                        android:text="google.com"
                        android:id="@+id/dwebsite"
                        android:paddingRight="10dp"
                        android:layout_alignLeft="@id/dphoneno"
                        android:layout_below="@id/dphone"
                        android:textColor="@color/primary_text"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="17sp"
                        android:text="@string/mailid"
                        android:id="@+id/dmail"
                        android:visibility="gone"
                        android:layout_below="@id/dweb"
                        android:textColor="@color/accent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="17sp"
                        android:text="kdjsklf@gmail.com"
                        android:id="@+id/dmailid"
                        android:paddingRight="0dp"
                        android:layout_alignLeft="@id/dphoneno"
                        android:layout_below="@id/dwebsite"
                        android:textColor="@color/primary_text"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="17sp"
                        android:text="@string/price"
                        android:id="@+id/dpric"

                        android:layout_below="@id/dmail"
                        android:textColor="@color/accent"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="17sp"
                        android:text="RS.100"
                        android:id="@+id/dprice"
                        android:paddingRight="10dp"
                        android:layout_alignLeft="@id/dphoneno"
                        android:layout_below="@id/dmailid"
                        android:textColor="@color/primary_text"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="17sp"
                        android:text="@string/address"
                        android:id="@+id/dadd"

                        android:layout_below="@id/dpric"
                        android:textColor="@color/accent"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="17sp"
                        android:text="No 7,east st,NewYork"
                        android:id="@+id/dadrress"
                        android:paddingRight="10dp"
                        android:layout_alignLeft="@id/dphoneno"
                        android:layout_below="@id/dpric"
                        android:textColor="@color/primary_text"
                        android:visibility="gone"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="17sp"
                        android:text="@string/faxno"
                        android:id="@+id/dfax"

                        android:layout_below="@id/dadd"
                        android:textColor="@color/accent"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="17sp"
                        android:text="38598093"
                        android:id="@+id/dfaxno"
                        android:paddingRight="10dp"
                        android:layout_alignLeft="@id/dphoneno"
                        android:layout_below="@id/dadrress"
                        android:textColor="@color/primary_text"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="17sp"
                        android:text="@string/shopname"
                        android:id="@+id/dshop"

                        android:layout_below="@id/dfax"
                        android:textColor="@color/accent"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="17sp"
                        android:text="Amazon"
                        android:id="@+id/dshopname"
                        android:paddingRight="10dp"
                        android:layout_alignLeft="@id/dphoneno"
                        android:layout_below="@id/dfax"
                        android:textColor="@color/primary_text"
                        android:visibility="gone"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                android:id="@+id/hiddentext"
                android:gravity="center"/>
            />

        </RelativeLayout>
    </ScrollView>

</LinearLayout>